<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="docker.linuxserver.medusa"
       name="Medusa (LinuxServer.io)"
       version="1.0.0"
       provider-name="LinuxServer.io">
    <requires>
        <import addon="os.libreelec.tv" version="7.0"/>
        <import addon="service.system.docker" version="0.0.0" />
        <import addon="docker.linuxserver.updater" version="0.0.0"/>
    </requires>
    <extension point="xbmc.service" library="default.py">
        <provides></provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Medusa in a docker container</summary>
        <description>
            Medusa is an automatic Video Library Manager for TV Shows. It watches for new episodes of your favorite shows, and when they are posted it does its magic.

            This is a docker container brought to you by the LinuxServer.io team.
            Please visit https://linuxserver.io for more information.
        </description>
        <disclaimer>
        </disclaimer>
        <news>
            docker.linuxserver.medusa:
            -------------------------------

            1.0.0
            - Initial release
        </news>
        <platform>all</platform>
        <website>http://linuxserver.io/</website>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
