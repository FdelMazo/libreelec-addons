<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="docker.linuxserver.sickgear"
       name="SickGear (LinuxServer.io)"
       version="1.0.0"
       provider-name="LinuxServer.io">
    <requires>
        <import addon="os.libreelec.tv" version="7.0"/>
        <import addon="service.system.docker" version="0.0.0" />
        <import addon="docker.linuxserver.updater" version="0.0.0"/>
    </requires>
    <extension point="xbmc.service" library="default.py">
        <provides></provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>SickGear in a docker container</summary>
        <description>
            SickGear provides management of TV shows and/or Anime, it detects new episodes, links downloader apps, and more..

            For more information on SickGear visit their website and check it out: https://github.com/SickGear/SickGear

            This is a docker container brought to you by the LinuxServer.io team.
            Please visit https://linuxserver.io for more information.
        </description>
        <disclaimer>
        </disclaimer>
        <news>
            docker.linuxserver.sickgear:
            -------------------------------

            1.0.0
            - Initial release
        </news>
        <platform>all</platform>
        <website>http://linuxserver.io/</website>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
